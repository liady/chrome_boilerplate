{
  "name": "{{Name}}",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "{{Description}}",
  "homepage_url": "http://www.yoururl.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "common/common.js", "bg/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "{{Title}}",
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "tabs","<all_urls>"
    ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "common/common.js", "content_scripts/utils.js", "content_scripts/content.js"
      ],
      "run_at": "document_end"
    }
  ]
}